<style>
  .backface-hidden {
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }

  .rotate-y-180 {
    transform: rotateY(180deg);
  }

  .transform-style-preserve-3d {
    transform-style: preserve-3d;
  }

  .flipped {
    transform: rotateY(180deg);
  }

  /* Arreglar el espacio en blanco al hacer flip */
  #flip-card-1,
  #flip-card-2,
  #flip-card-3,
  #flip-card-4,
  #flip-card-5 {
    -webkit-perspective: 1000px;
    perspective: 1000px;
  }

  #flip-card-1 > div,
  #flip-card-2 > div,
  #flip-card-3 > div,
  #flip-card-4 > div,
  #flip-card-5 > div {
    -webkit-transform-style: preserve-3d;
    transform-style: preserve-3d;
  }
</style>

<script>
  // Carrusel de servicios
  document.addEventListener("DOMContentLoaded", function () {
    // Manejar el efecto flip card
    const flipCards = document.querySelectorAll('[id^="flip-card-"]');

    flipCards.forEach((card) => {
      card.addEventListener("click", function (this: HTMLElement) {
        const inner = this.querySelector(".transform-style-preserve-3d");
        if (inner) {
          inner.classList.toggle("flipped");
        }
      });
    });

    // Verificar si hay un hash #gracias para mostrar mensaje de agradecimiento
    if (window.location.hash === "#gracias") {
      // Crear el modal de agradecimiento
      const modal = document.createElement("div");
      modal.className =
        "fixed inset-0 flex items-center justify-center z-50 bg-black/70";
      modal.innerHTML = `
        <div class="bg-white p-8 max-w-md mx-auto rounded-xl shadow-lg">
          <div class="text-center">
            <h2 class="text-2xl font-bold text-primary mb-4">¡Gracias por contactarnos!</h2>
            <p class="mb-6">Hemos recibido tu mensaje. Nos pondremos en contacto contigo lo antes posible.</p>
            <button id="cerrar-modal" class="bg-primary text-white px-6 py-2 rounded-md hover:bg-[#EE9D26] transition-colors">
              Cerrar
            </button>
          </div>
        </div>
      `;

      document.body.appendChild(modal);

      // Cerrar el modal al hacer clic en el botón
      const cerrarModalBtn = document.getElementById("cerrar-modal");
      if (cerrarModalBtn) {
        cerrarModalBtn.addEventListener("click", () => {
          modal.remove();
          // Limpiar el hash de la URL
          history.pushState(
            "",
            document.title,
            window.location.pathname + window.location.search
          );
        });
      }

      // También cerrar el modal al hacer clic fuera
      modal.addEventListener("click", (e) => {
        if (e.target === modal) {
          modal.remove();
          history.pushState(
            "",
            document.title,
            window.location.pathname + window.location.search
          );
        }
      });
    }

    // Carrusel del banner principal
    const bannerCarousel = document.querySelector("#banner-carousel .flex");
    const bannerIndicadores = document.querySelectorAll("[data-banner-index]");
    
    const btnIzquierda = document.getElementById("banner-btn-izquierda");
    const btnDerecha = document.getElementById("banner-btn-derecha");
    let bannerActual = 0;

    function mostrarBanner(index: number) {
      if (bannerCarousel && bannerCarousel instanceof HTMLElement) {
        bannerCarousel.style.transform = `translateX(-${index * 100}%)`;

        bannerIndicadores.forEach((indicador, i) => {
          if (i === index) {
            indicador.classList.add("opacity-100");
            indicador.classList.remove("opacity-40");
          } else {
            indicador.classList.add("opacity-40");
            indicador.classList.remove("opacity-100");
          }
        });

        // Mostrar/ocultar botones según la posición
        if (btnIzquierda) {
          if (index === 0) {
            btnIzquierda.classList.add("opacity-0");
            btnIzquierda.classList.add("pointer-events-none");
          } else {
            btnIzquierda.classList.remove("opacity-0");
            btnIzquierda.classList.remove("pointer-events-none");
          }
        }

        // Ocultar flecha derecha en el último banner
        if (btnDerecha) {
          if (index === 2) { // 2 es el índice del último banner (0-based)
            btnDerecha.classList.add("opacity-0");
            btnDerecha.classList.add("pointer-events-none");
          } else {
            btnDerecha.classList.remove("opacity-0");
            btnDerecha.classList.remove("pointer-events-none");
          }
        }

        bannerActual = index;
      }
    }

    // Inicializar el primer indicador como activo
    if (bannerIndicadores.length > 0) {
      bannerIndicadores[0].classList.add("opacity-100");
      bannerIndicadores[0].classList.remove("opacity-40");
    }

    // Cambiar banner automáticamente cada 5 segundos
    setInterval(() => {
      if (bannerCarousel) {
        const slides = 3; // Tenemos 3 banners
        const nextSlide = (bannerActual + 1) % slides;
        mostrarBanner(nextSlide);
      }
    }, 10000);

    // Permitir clic en los indicadores del banner
    bannerIndicadores.forEach((indicador, i) => {
      indicador.addEventListener("click", () => {
        mostrarBanner(i);
      });
    });

    // Botones de navegación del banner
    if (btnDerecha) {
      btnDerecha.addEventListener("click", function () {
        const totalSlides = 3; // Tenemos 3 banners
        const nextSlide = (bannerActual + 1) % totalSlides;
        mostrarBanner(nextSlide);
      });
    }

    if (btnIzquierda) {
      btnIzquierda.addEventListener("click", function () {
        const totalSlides = 3; // Tenemos 3 banners
        const prevSlide = (bannerActual - 1 + totalSlides) % totalSlides;
        mostrarBanner(prevSlide);
      });
    }

    // Carrusel de servicios
    const carrusel = document.getElementById("carrusel");
    const btnDerechaServicios = document.getElementById("servicios-btn-derecha");
    const btnIzquierdaServicios = document.getElementById("servicios-btn-izquierda");
    let posicionActual = 0;
    const totalSlidesServicios = 2; // Tenemos 2 slides de servicios

    if (carrusel && btnDerechaServicios && btnIzquierdaServicios) {
      // Inicializar estado de los botones
      btnIzquierdaServicios.classList.add('opacity-0');
      btnIzquierdaServicios.classList.add('pointer-events-none');
      btnDerechaServicios.classList.remove('opacity-0');
      btnDerechaServicios.classList.remove('pointer-events-none');

      btnDerechaServicios.addEventListener("click", function () {
        posicionActual = (posicionActual + 1) % totalSlidesServicios;
        actualizarPosicionCarrusel();
      });

      btnIzquierdaServicios.addEventListener("click", function () {
        posicionActual = (posicionActual - 1 + totalSlidesServicios) % totalSlidesServicios;
        actualizarPosicionCarrusel();
      });

      function actualizarPosicionCarrusel() {
        if (!carrusel || !btnIzquierdaServicios || !btnDerechaServicios) return;

        if (posicionActual === 0) {
          carrusel.style.transform = `translateX(0%)`;
          btnIzquierdaServicios.classList.add('opacity-0');
          btnIzquierdaServicios.classList.add('pointer-events-none');
          btnDerechaServicios.classList.remove('opacity-0');
          btnDerechaServicios.classList.remove('pointer-events-none');
        } else {
          carrusel.style.transform = `translateX(calc(-${posicionActual * 100}% - 3rem))`;
          btnIzquierdaServicios.classList.remove('opacity-0');
          btnIzquierdaServicios.classList.remove('pointer-events-none');
          btnDerechaServicios.classList.add('opacity-0');
          btnDerechaServicios.classList.add('pointer-events-none');
        }
      }
    }

    // Clientes carrusel
    const clientesSlider = document.getElementById("clientes-slider");
    const clientesIndicadores = document.querySelectorAll('.clientes-indicadores [data-index]');
    let slideActual = 0;

    function mostrarSlide(index: number) {
      if (clientesSlider) {
        // Asegurarse de que el índice esté dentro del rango válido
        const totalSlides = clientesSlider.children.length;
        const normalizedIndex = ((index % totalSlides) + totalSlides) % totalSlides;
        
        clientesSlider.style.transform = `translateX(-${normalizedIndex * 100}%)`;
  
        // Primero, remover la clase activa de todos los indicadores
        clientesIndicadores.forEach((indicador) => {
          indicador.classList.remove("opacity-100");
          indicador.classList.add("opacity-40");
        });
  
        // Luego, activar solo el indicador seleccionado
        if (clientesIndicadores[normalizedIndex]) {
          clientesIndicadores[normalizedIndex].classList.remove("opacity-40");
          clientesIndicadores[normalizedIndex].classList.add("opacity-100");
        }
  
        slideActual = normalizedIndex;
      }
    }

    // Inicializar el primer indicador como activo
    if (clientesIndicadores.length > 0) {
      mostrarSlide(0);
    }

    // Cambiar slide automáticamente cada 5 segundos
    let intervalId = setInterval(() => {
      if (clientesSlider) {
        const nextSlide = (slideActual + 1) % clientesSlider.children.length;
        mostrarSlide(nextSlide);
      }
    }, 5000);

    // Permitir clic en los indicadores
    clientesIndicadores.forEach((indicador, i) => {
      indicador.addEventListener("click", () => {
        // Reiniciar el intervalo cuando se hace clic manualmente
        clearInterval(intervalId);
        mostrarSlide(i);
        intervalId = setInterval(() => {
          if (clientesSlider) {
            const nextSlide = (slideActual + 1) % clientesSlider.children.length;
            mostrarSlide(nextSlide);
          }
        }, 5000);
      });
    });
  });
</script>
