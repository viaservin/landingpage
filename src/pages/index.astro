<script>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slide');
  const totalSlides = slides.length;
  const flechaDerecha = document.querySelector('.flecha-derecha') as HTMLElement;
  const flechaIzquierda = document.querySelector('.flecha-izquierda') as HTMLElement;

  function moverCarrusel(direccion: 'derecha' | 'izquierda') {
    if (direccion === 'derecha') {
      currentSlide = (currentSlide + 1) % totalSlides;
    } else {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
    }
    
    const carrusel = document.getElementById('carrusel');
    if (carrusel) {
      carrusel.style.transform = `translateX(-${currentSlide * 100}%)`;
    }

    // Mostrar/ocultar botones según la posición
    if (flechaDerecha && flechaIzquierda) {
      if (currentSlide === 0) {
        flechaDerecha.style.display = 'flex';
        flechaIzquierda.style.display = 'none';
      } else {
        flechaDerecha.style.display = 'none';
        flechaIzquierda.style.display = 'flex';
      }
    }
  }

  // Asegurarse de que el script se ejecute cuando el DOM esté listo
  document.addEventListener('DOMContentLoaded', () => {
    if (flechaDerecha) {
      flechaDerecha.addEventListener('click', () => moverCarrusel('derecha'));
    }
    if (flechaIzquierda) {
      flechaIzquierda.addEventListener('click', () => moverCarrusel('izquierda'));
    }

    // Agregar funcionalidad de flip para las tarjetas del equipo
    const equipoItems = document.querySelectorAll('.equipo-item');
    
    equipoItems.forEach(item => {
      item.addEventListener('click', () => {
        // Remover la clase flipped de todas las tarjetas
        equipoItems.forEach(otherItem => {
          if (otherItem !== item) {
            otherItem.classList.remove('flipped');
          }
        });
        
        // Alternar la clase flipped en la tarjeta clickeada
        item.classList.toggle('flipped');
      });
    });

    const slides = document.querySelector('.clientes-slides') as HTMLElement | null;
    const indicadores = document.querySelectorAll('.clientes-indicadores span');
    let slideActual = 0;

    function mostrarSlide(idx: number) {
      if (slides) {
        slides.style.transform = `translateX(-${idx * 100}%)`;
        indicadores.forEach((dot, i) => {
          dot.classList.toggle('activo', i === idx);
        });
        slideActual = idx;
      }
    }

    indicadores.forEach((dot, idx) => {
      dot.addEventListener('click', () => mostrarSlide(idx));
    });

    // Opcional: auto-slide cada 5 segundos
    // setInterval(() => {
    //   let next = (slideActual + 1) % 3;
    //   mostrarSlide(next);
    // }, 5000);
  });
</script>

