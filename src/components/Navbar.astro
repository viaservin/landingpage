// Obtener la ruta actual y el hash
const currentPath = Astro.url.pathname;
const currentHash = Astro.url.hash;

const isActive = (path: string) => {
  if (path.startsWith('/#')) {
    return currentHash === path.substring(1);
  }
  return currentPath === path;
};
