  <div class="max-w-7xl mx-auto flex justify-between items-center px-4">
    <div class="logo">
      <img src="/logo.png" alt="Logo" class="h-10" />
    </div>
    <ul class="flex items-center gap-6 md:gap-4 flex-wrap md:flex-nowrap">
      <li><a href="#nosotros" data-section="nosotros" class="text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Nosotros</a></li>
      <li><a href="#servicios" data-section="servicios" class="text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Servicios</a></li>
      <li><a href="#clientes" data-section="clientes" class="text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Clientes</a></li>
