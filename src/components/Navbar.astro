<nav class="fixed top-0 left-0 w-full bg-white py-4 shadow-md z-10 rounded-b-lg">
  <div class="max-w-7xl mx-auto flex justify-between items-center px-4">
    <div class="logo">
      <img src="/logo.png" alt="Logo" class="h-10" />
    </div>
    
    <!-- Botón de menú móvil -->
    <button id="menu-toggle" class="md:hidden flex items-center text-gray-800 focus:outline-none">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
    
    <!-- Menú de navegación -->
    <div id="navbar-menu" class="md:flex absolute md:relative top-[60px] md:top-0 left-0 w-full md:w-auto bg-white md:bg-transparent transition-all duration-300 ease-in-out opacity-0 max-h-0 md:opacity-100 md:max-h-[500px] overflow-hidden">
      <ul class="flex flex-col md:flex-row w-full items-center gap-4 py-4 md:py-0 shadow-md md:shadow-none md:items-center md:gap-6 flex-wrap md:flex-nowrap">
        <li><a href="#nosotros" data-section="nosotros" class="block w-full md:w-auto text-center py-2 md:py-0 text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Nosotros</a></li>
        <li><a href="#servicios" data-section="servicios" class="block w-full md:w-auto text-center py-2 md:py-0 text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Servicios</a></li>
        <li><a href="#clientes" data-section="clientes" class="block w-full md:w-auto text-center py-2 md:py-0 text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Clientes</a></li>
        <li><a href="#certificaciones" data-section="certificaciones" class="block w-full md:w-auto text-center py-2 md:py-0 text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Certificaciones y asociaciones</a></li>
        <li><a href="#contacto" data-section="contacto" class="block w-full md:w-auto text-center py-2 md:py-0 text-gray-800 font-medium hover:text-orange-500 transition-colors font-['Poppins'] text-base">Contáctanos</a></li>
        <li><button class="bg-orange-500 text-white border border-orange-500 py-2 px-4 rounded-md font-bold cursor-pointer transition-all hover:bg-white hover:text-orange-500 whitespace-nowrap w-full md:w-auto">Iniciar sesión</button></li>
      </ul>
    </div>
  </div>
</nav>

<script>
  // Agregar manejador de clic para los enlaces de navegación
  document.addEventListener('DOMContentLoaded', function() {
    const navLinks = document.querySelectorAll('nav a[data-section]');
    const menuToggle = document.getElementById('menu-toggle');
    const navMenu = document.getElementById('navbar-menu');
    
    // Menú móvil toggle con transición
    if (menuToggle && navMenu) {
      menuToggle.addEventListener('click', function() {
        if (navMenu.classList.contains('max-h-0')) {
          // Abrir menú con animación
          navMenu.classList.remove('max-h-0');
          navMenu.classList.add('max-h-[500px]');
          navMenu.classList.remove('opacity-0');
          navMenu.classList.add('opacity-100');
        } else {
          // Cerrar menú con animación
          navMenu.classList.remove('max-h-[500px]');
          navMenu.classList.add('max-h-0');
          navMenu.classList.remove('opacity-100');
          navMenu.classList.add('opacity-0');
        }
      });
    }
    
    // Cerrar menú cuando se hace clic en un enlace
    navLinks.forEach(function(link) {
      link.addEventListener('click', function(this: HTMLAnchorElement, e: Event) {
        e.preventDefault();
        const sectionId = this.getAttribute('data-section');
        
        // Cerrar el menú móvil al hacer clic
        if (window.innerWidth < 768 && navMenu) {
          navMenu.classList.remove('max-h-[500px]');
          navMenu.classList.add('max-h-0');
          navMenu.classList.remove('opacity-100');
          navMenu.classList.add('opacity-0');
        }
        
        if (!sectionId) return;
        
        // Buscar la sección por ID
        const targetSection = document.getElementById(sectionId);
        
        // Si encontramos la sección, hacemos scroll
        if (targetSection) {
          const headerOffset = 80; // Compensar el navbar fijo
          const elementPosition = targetSection.getBoundingClientRect().top;
          const offsetPosition = elementPosition + window.pageYOffset - headerOffset;
          
          window.scrollTo({
            top: offsetPosition,
            behavior: 'smooth'
          });
        }
      });
    });
  });
</script>